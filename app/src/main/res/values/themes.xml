<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZeroMirror" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->

        <!-- スプラッシュスクリーン -->
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/zeromirror_splash_screen_icon
        </item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">#ffb3b9</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>
    </style>
</resources>